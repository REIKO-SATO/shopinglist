<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %>
            <ul class="topic-text">
              <li>date：<%= topic.date %></li>
              <li>brand：<%= topic.brand %></li>
              <li>item：<%= topic.item %></li>
              <li>size：<%= topic.size %></li>
              <li>price：<%= topic.price %></li>
              <li>description：<%= topic.description %></li>
            </ul>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>